    {
      "name": "Examples",
      "item": [
        {
          "name": "Cars - Sorted by Price",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cars?sort=price&order=asc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cars"],
              "query": [
                {
                  "key": "sort",
                  "value": "price"
                },
                {
                  "key": "order",
                  "value": "asc"
                }
              ]
            },
            "description": "Get cars sorted by price (lowest first)"
          },
          "response": []
        },
        {
          "name": "Boats - Price Range",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/boats?min_price=100000&max_price=500000",
              "host": ["{{baseUrl}}"],
              "path": ["api", "boats"],
              "query": [
                {
                  "key": "min_price",
                  "value": "100000"
                },
                {
                  "key": "max_price",
                  "value": "500000"
                }
              ]
            },
            "description": "Get boats within a specific price range"
          },
          "response": []
        },
        {
          "name": "Assets - Search",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/assets?search=toyota&limit=5",
              "host": ["{{baseUrl}}"],
              "path": ["api", "assets"],
              "query": [
                {
                  "key": "search",
                  "value": "toyota"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            },
            "description": "Search for assets by name and limit results"
          },
          "response": []
        }
      ]
    }
